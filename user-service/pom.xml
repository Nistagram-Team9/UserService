		<java.version>1.8</java.version>
		<app.name>userService</app.name>
		<sonar.projectKey>Nistagram-Team9_UserService</sonar.projectKey>
		<sonar.organization>nistagram-team9</sonar.organization>
		<sonar.host.url>https://sonarcloud.io</sonar.host.url>
